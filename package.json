{
    "name": "cif",
    "displayName": "CIF",
    "description": "Crystallographic Information File (CIF)",
    "author": "Heikki Kainulainen",
    "license": "MIT",
    "version": "0.3.0",
    "publisher": "thisperiodictable",
    "icon": "icon.png",
    "repository": {
        "type": "git",
        "url": "https://github.com/hmkainul/vscode-cif.git"
    },
    "categories": [
        "Programming Languages"
    ],
    "keywords": [
        "cif crystallographic information file"
    ],
    "engines": {
        "vscode": "^1.43.0"
    },
    "activationEvents": [
        "onLanguage:cif"
    ],
    "main": "./client/out/extension",
    "contributes": {
        "languages": [
            {
                "id": "cif",
                "aliases": [
                    "CIF",
                    "Crystallographic Information File",
                    "cif"
                ],
                "extensions": [
                    "cif"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "cif",
                "scopeName": "source.cif",
                "path": "./syntaxes/cif.tmLanguage.json"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -b",
        "watch": "tsc -b -w",
        "postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
        "test": "sh ./scripts/e2e.sh",
        "unit-test": "mocha --recursive \"./server/out/test/*.js\""
    },
    "devDependencies": {
        "@types/mocha": "^8.2.2",
        "@types/node": "^12.12.0",
        "mocha": "^8.3.2",
        "typescript": "^4.2.3"
    }
}
